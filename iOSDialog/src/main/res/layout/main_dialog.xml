<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:background="@android:color/transparent"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlecard"
        android:layout_marginHorizontal="5dp"
        android:textAllCaps="false"
        android:gravity="center"

        android:textAlignment="center"
        android:textColor="@color/black_text"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/title">

            <TextView
                android:id="@+id/titleview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messageview"
                android:layout_centerHorizontal="true"
                android:textColor="@color/greytext"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titleview"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/sperator"
        android:layout_marginHorizontal="5dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/positivecard"
        android:layout_marginHorizontal="5dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/black_text"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom"
            >

            <TextView
                android:id="@+id/positivetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="OK"
                android:textSize="25dp"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                android:textColor="@color/item_color"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/negativecard"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cancelbtn"
            >

            <TextView
                android:id="@+id/negativetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="@color/cancel_colour"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>